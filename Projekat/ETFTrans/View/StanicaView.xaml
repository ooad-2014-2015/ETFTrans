<Window x:Name="Stanica" x:Class="ETFTrans.View.StanicaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stanica" Height="261.194" Width="300" ResizeMode="NoResize">
    <Grid Margin="0,0,-8,26">
        <TextBox HorizontalAlignment="Left" Height="23" Margin="142,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.128,-1.302" Text="{Binding NazivStanice}"/>
        <Label Content="Naziv stanice:" HorizontalAlignment="Left" Margin="40,51,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="142,103,0,0" Text="{Binding Cijena}"/>
        <Label Content="Cijena:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="77,100,0,0"/>
        <Button Content="Dodaj stanicu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="93" Margin="169,149,0,0" Command="{Binding BtnDodajNovuStanicu}"/>

    </Grid>
</Window>
